cc {
  set { _
    iwarr_test1.c
    iwutils_test1.c
    iwhmap_test1.c
  }
  set { _ ..${CFLAGS} -DIW_STATIC }
}

foreach {
  OBJ
  ${CC_OBJS}
  run {
    exec { ${CC} ${OBJ} ${LDFLAGS_TEST} -o %{${OBJ}} }
    consumes { ${LIBIOWOW_A} ${OBJ} }
    produces { %{${OBJ}} }
  }
}

if { ${IOWOW_RUN_TESTS}
  foreach {
    OBJ
    ${CC_OBJS}
    run {
      always
      shell { %{${OBJ}} }
      consumes { %{${OBJ}} }
    }
  }
}